/**发布全局**/
.release_content{
  width: 100%;
  height: 100%;
  background-color: #efeff4;
  font-weight: 500;
  margin-bottom:30px;
}

/**轮播图**/
.broadcast image{
  width:100%;
  height:140px;
  text-align:center;
}

.affirm_t1{
  width: 100%;
  background-color: #FFF;
  padding-top: 5px;
}
.affirm_t1 .t1{
  font-size: 14px;
  line-height: 24px;
  color: #888;
  margin: 0 10px 0 10px;
  border-radius: 6px;
  padding: 5px;
  background-color: #e5f6fe;
}
.affirm_t2{
  width: 100%;
  height: 30px;
  line-height: 30px;
  background-color: #FFF;
  border-bottom: 1px solid #e6e6e6;
  text-align: center;
  padding-top: 20px;
  padding-bottom: 20px;
}
.affirm_t2 .t2{
  color: #999;
  font-weight: 400;
}
.affrim_s{
  width: 40.5%;
  height: 60px;
  border-radius: 6px;
  color: #FFF;
  padding: 10px;
  margin-top: 20px;
  font-size: 20px;
  line-height: 30px;
}
.affirm_f1{
  float: left;
  background-color: #00bfaf;
  margin-left: 10px;
}
.affirm_f2{
  float: right;
  background-color: #feba01;
  margin-right: 10px;
}
.affrim_img{
  width: 46px;
  height: 46px;
  background-color: #FFF;
  border-radius: 24px;
  float: right;
  position: relative;
  top: -20px;
}
.affrim_img image{
  width: 40px;
  height: 40px;
  padding: 3px;
}
.affrim_s_b1{
  font-size: 10px;
  border: 1px solid #FFF;
  font-weight: 400;
  border-radius: 10px;
  padding: 2px 4px;
  line-height: 10px;
}
.ui-share-hover{
  opacity: 0.6;
}

/* 弹窗效果 */
.dialog-mask{
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}
.socket{
  position: fixed;
  z-index: 5000;
  top: 45%;
  left:50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #f9f7fa;
  overflow: hidden;
  width: 80%;
  border-radius: 5px;
  font-weight: 100;
}
.title{
  text-align:center;
  padding:12px;
  font-size: 18px;
  border-bottom:1px solid #E6E6E6;
  font-weight: 600;
  color:#333;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}
.content{
  margin:0 25px;
  padding:15px 5px;
  font-size:15px;
  font-weight: 500;
  color:#333;
  border-bottom:1px solid #EEEEEE;
}
.contents{
  padding:15px 5px;
  margin: 0 25px;
  font-size:14px;
  font-weight: 400;
  color:#666;
}
.container{
  padding: 0px
}
.authorize{
  opacity: 1;
  border-top:1px solid #E6E6E6;
  color:#32CD32;
  font-weight: 500;
  background-color:#f9f7fa;
}
.authorize::after{
  border: 0;
}

/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  overflow: hidden;
  z-index: 1000;
}


.formId_btn{
  width: 20rpx;
  height: 20rpx;
  margin: 0;
  padding: 0;
  border-radius: 0;
  z-index: 999;
  position: fixed;
  left: 10px;
  opacity: 0;
}
.formId_btn::after{
