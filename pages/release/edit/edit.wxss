.edit_content{
  background-color: #efeff4;
  font-size: 16px;
  color: #333;
  overflow-x: hidden;
  height: 100%;
}
.edit_types{
  background-color: #FFF;
  height: 50px;
  line-height: 50px;
}
.edit_types_left{
  float: left;
  margin-left: 20px;
}
.edit_types_right{
  float: right;
  margin-right: 10px;
  color: #feba01;
}
.edit_title{
  margin: 10px 10px 5px 20px;
  font-size: 12px;
  color: #666;
}
.edit_input{
  width: 96%;
  margin-left: 2%;
  margin-right: 2%;
  height: 100%;
  background-color: #FFF;
  border-radius: 10px;
  margin-bottom: 10px;
}
.edit_input image{
  width: 32px;
  height: 32px;
  float: right;
  position: relative;
  top: -15px;
}
.edit_inpit_span{
  height: 50px;
  line-height: 30px;
  margin: 5px 15px 5px 15px;
  border-bottom: 1px solid #e6e6e6;
}
.edit_inpit_span_img{
  position: relative;
  right: 10px;
}
.edit_inpit_span_img{
  position: relative;
  right: -20px;
}
.edit_inpit_text{
  background-color: #FFF;
  line-height: 30px;
  margin-right: 10px;
  margin-left: 10px;
  border-radius: 10px;
  border-bottom: 1px solid #e6e6e6;
}
.edit_inpit_textarea{
  width: 96%;
  padding: 2%;
  min-height: 100px;
}
.edit_inpit_title{
  padding-right: 15px;
  margin-top: 10px;
  border-right: 1px solid #e6e6e6;
  float: left;
}
.edit_inpit_span input{
  position: relative;
  top: 13px;
  left: 10px;
}
.edit_inpit_span image{
  position: relative;
  right: 20px;
}
.edit_input_adr{
  width: 70%;
}
.edit_inpit_span radio-group{
  position: relative;
  top: 7px;
  left: 10px;
}
.edit_inpit_span label{
  margin-right: 15px;
}
.edit_inpit_requ{
  color: #FF0000;
}
.edit_agreement{
  color: #49b2ff;
  font-weight: 700;
}
.fromSubmit{
  width: 96%;
  background-color: #00bfaf;
  color: #FFF;
  margin-bottom:30px;
  margin-top: 10px;
}
.edit_title_agreement{
  margin: 20px 0px 0px 10px;
  font-size: 12px;
}
.tui-picker-content{
  padding: 30rpx;
  text-align: center;
}
.tui-picker-name{
  height: 80rpx;
  line-height: 80rpx;
}
.tui-picker-detail{
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  font-size: 35rpx;
  padding: 0 10px;
  overflow: hidden;
}
.ad_popError{ 
  background: #fc554d; 
  color: #fff; 
  height: 58rpx; 
  line-height: 58rpx; 
  font-size: 24rpx; 
  text-align: center; 
  position: absolute; 
  left: 0; 
  top: 0; 
  width: 100%; 
  z-index:3;
} 