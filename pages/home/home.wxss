page{
  height: 100%;
  width: 100%;
  background-color: #efeff4;
  font-size: 16px;
  font-weight: 400;
  color: #555;
}
.ui-share-hover{
  opacity: 0.6;
}
.home_header{
  width: 100%;
  height: 160px;
  background-color: #00bfaf;
  display: flex;
  justify-content: center;
}
.home_header_avatar{
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
  border: 4px solid #fff; 
  margin-top: 25px;
}
.home_header_nick{
  text-align: center; 
  color: #FFF;
  font-size: 20px;
  position: absolute;
  top: 100px;
}
.home_cont_navs{
  height: 56px;
  background-color: #FFF;
  line-height: 56px;
  padding: 0 20px 0 20px;
  border-bottom: 1px solid #eeeeee;
}
.home_cont_navs image,.home_cont_nav image{
  width: 12px;
  height: 12px;
  float: right;
  position: relative;
  top: 22px;
}
.home_cont_nav{
  border: 1px solid #f1f1f1;
  height: 56px;
  background-color: #FFF;
  line-height: 56px;
  padding: 0 20px 0 20px;
  margin: 5px 0 10px 0;
}
.home_cont_nav_left{
  float: left;
}
.kefuhuihua{
  width: 100%;
  position: relative;
  top: -50px;
  opacity:0;
}

/* 弹窗效果 */
.dialog-mask{
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}
.socket{
  position: fixed;
  z-index: 5000;
  top: 45%;
  left:50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #f9f7fa;
  overflow: hidden;
  width: 80%;
  border-radius: 5px;
  font-weight: 100;
}
.title{
  text-align:center;
  padding:12px;
  font-size: 18px;
  border-bottom:1px solid #E6E6E6;
  font-weight: 600;
  color:#333;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}
.content{
  margin:0 25px;
  padding:15px 5px;
  font-size:15px;
  font-weight: 500;
  color:#333;
  border-bottom:1px solid #EEEEEE;
}
.contents{
  padding:15px 5px;
  margin: 0 25px;
  font-size:14px;
  font-weight: 400;
  color:#666;
}
.container{
  padding: 0px
}
.authorize{
  opacity: 1;
  border-top:1px solid #E6E6E6;
  color:#32CD32;
  font-weight: 500;
  background-color:#f9f7fa;
}
.authorize::after{
  border: 0;
}

/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  overflow: hidden;
  z-index: 1000;
}