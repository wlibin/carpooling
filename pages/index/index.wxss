page{
  height: 100%;
}
/**首页全局**/
.index_content{
  width: 100%;
  height: 100%;
  background-color: #efeff4;
  font-weight: 400;
  color:#111;
}
.ui-share-hover{
  opacity: 0.6;
}
/**轮播图**/
.broadcast image{
  width:100%;
  height:150px;
  text-align:center;
}
/**公告**/
.notice{
  width: 100%;
  height: 24px;
  background-color: #FFF;
  margin-top:0px;
  padding-bottom:2px;
  padding-top: 2px;
  color:#888;
}
.swiper_container {
  height: 25px;
  margin-left: 40px;
  width: 80%;
}
.swiper_item {
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/**公告图片**/
.notice .notice_img{
  float: left;
  border-right: 1px solid #EEE;
  padding-top: 0px;
}
.notice .notice_img image{
  width: 30px;
  height: 24px;
}
/**公告内容**/
.notice .notice_cont{
  font-size: 12px;
  line-height: 26px;
  color: #333;
  font-weight: 400;
}
.tab_nav{
  text-align: center;
  font-size: 16px;
  margin-top: 5px;
  line-height: 39px;
  height: 40px;
  border-bottom: 1px solid #ddd;
  background-color: #FFF;
  font-weight: 450;
  color: #555;
}
.tab_nav_1,.tab_nav_2,.tab_nav_3,.tab_nav_4{
  float: left;
  width: 19%;
  margin-left: 3%;
  margin-right: 3%;
}
.tab_active{
  border-bottom: 2px solid #00bfaf;
  color: #00bfaf;
}
.tab_cont{
  padding: 15px;
  font-size: 11px;
  border-radius: 4px;
  border-bottom: 1px solid #EEE;
  background-color: #FFF;
  line-height: 26px;
}
.tab_cont_rzc{
  padding: 1px 4px 1px 4px;
  margin-left: 5px;
  border-radius: 2px;
  color: #FFF;
  font-size: 12px;
  font-weight: 700;
  background-color: #00bfaf;
  opacity: 0.7;
  position: relative;
  top: -1px;
}
.tab_cont_czr{
  padding: 1px 4px 1px 4px;
  margin-left: 5px;
  border-radius: 2px;
  color: #FFF;
  font-size: 12px;
  font-weight: 700;
  background-color: #FF0000;
  opacity: 0.4;
  position: relative;
  top: -1px;
}
.tab_cont_qi{
  margin: 5px 0 5px 0;
  font-size: 16px;
}
.tab_cont_zhong{
  margin: 5px 0 5px 0;
  font-size: 16px;
}
.tab_cont_qi_title{
  font-size: 16px;
  margin-right: 5px;
  padding: 0 3px 0 3px;
  text-align: center;
  color: #00bfaf;
}
.tab_cont_zhong_title{
  font-size: 16px;
  margin-right: 5px;
  padding: 0 3px 0 3px;
  text-align: center;
  color: #FF0000;
}
.tab_cont_time{
  color: #666;
  font-size: 14px;
  font-weight: 400;
}
.tab_cont_pople_1{
  color: #FF0000;
  font-weight: 700;
  padding: 0 3px 0 3px;
}
.tab_cont_pople_2{
  color: #00bfaf;
  font-weight: 700;
  padding: 0 3px 0 3px;
}
.tab_cont_user{
  color: #666;
  font-size: 14px;
  font-weight: 400;
}
.tab_cont_user image{
  width: 16px;
  height: 16px;
  border-radius: 10px;
  position: relative;
  top: 3px;
  margin-right: 3px;
}
.tab_cont_user_call{
  font-size: 10px;
  padding: 0 5px 0 5px;
  color: #999;
}
.tab_cont_user_info{
  border: 1px solid #00bfaf;
  color: #00bfaf;
  font-size: 10px;
  border-radius: 4px;
  padding: 0 3px 0 3px;
  margin: 0 2px 0 2px;
}
.tab_cont_user_info_no{
  display: none;
}
.tab_cont_btn{
  width: 80px;
  font-size: 12px;
  background-color: #00bfaf;
  color: #FFF;
  float: right;
  position: relative;
  top: -5px;
}
.tab_cont_marks{
  color: #888;
  font-size: 14px;
  margin-top: 10px;
  padding-top: 5px;
  border-top: 1px dashed #ddd;
  font-weight: 400;
}


/* 弹窗效果 */
.dialog-mask{
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}
.socket{
  position: fixed;
  z-index: 5000;
  top: 45%;
  left:50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #f9f7fa;
  overflow: hidden;
  width: 80%;
  border-radius: 5px;
  font-weight: 100;
}
.title{
  text-align:center;
  padding:12px;
  font-size: 18px;
  border-bottom:1px solid #E6E6E6;
  font-weight: 600;
  color:#333;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}
.content{
  margin:0 25px;
  padding:15px 5px;
  font-size:15px;
  font-weight: 500;
  color:#333;
  border-bottom:1px solid #EEEEEE;
}
.contents{
  padding:15px 5px;
  margin: 0 25px;
  font-size:14px;
  font-weight: 400;
  color:#666;
}
.container{
  padding: 0px
}
.authorize{
  opacity: 1;
  border-top:1px solid #E6E6E6;
  color:#32CD32;
  font-weight: 500;
  background-color:#f9f7fa;
}
.authorize::after{
  border: 0;
}

/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  opacity: 0.3;
  top: 0;
  left: 0;
  background: #000;
  overflow: hidden;
  z-index: 1000;
}
/*对话框 */
.commodity_attr_box {
  height: 500rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}

.commodity_bar{
  width: 100%;
  height: 40px;
  line-height: 40px;
  background-color: #f9f9f9;
  margin-top: -10px;
  font-size: 14px;
  text-align: center;
  border-bottom: 1px solid #f1f1f1;
}
.commodity_no{
  width: 20%;
  float: left;
  color: #00bfaf;
}
.commodity_yes{
  font-size: 14px;
  background-color: #f9f9f9;
  position: relative;
  top: 2px;
  left: 2px;
  width: 20%;
  float: right;
  color: #00bfaf;
}
.commodity_yes::after{
  border: 0;
}
.commodity_reset{
  width: 20%;
  color: #999;
  padding: 3px 8px 3px 8px;
  border: 1px solid #e6e6e6;
  border-radius: 2px;
}
.commodity_vp{
  text-align: center;
  font-size: 14px;
  margin-top: 35px;
  margin-bottom: 15px;
}
.commodity_vp_ts{
  color: #666;
  border: 1px solid #999;
  padding: 3px 10px 3px 10px;
  border-radius: 4px;
  margin: 0 20px 0 20px;
}
.commodity_vp_active{
  border-color: #00bfaf;
  color: #00bfaf;
  font-weight: 700;
}
.commodity_vp_1{
  padding:3px 17px 3px 17px;
}
.commodity_adr{
  text-align: center;
  font-size: 14px;
}
.commodity_adr_img{
  float: left;
  text-align: center;
}
.commodity_adr_img image{
  width: 33px;
  height: 33px;
  position: relative;
  top: 15px;
  left: 15px;
}
.commodity_adr_ts{
  width: 40%;
  border-bottom: 1px solid #e1e1e1;
  height: 30px;
  line-height: 30px;
}
.commodity_adr_start{
  float: left;
  margin: 20px 0 10px 10px;
}
.commodity_adr_end{
  float: right;
  margin: 20px 10px 10px 0;
}
.commodity_date_number{
  width: 40%;
  margin: 15px 10px 10px 10px;
  text-align: center;
  font-size: 14px;
  border-bottom: 1px solid #e1e1e1;
  height: 30px;
  line-height: 30px;
}
.commodity_number_right{
  float: right;
}
.commodity_date_left{
  float: left;
}

.index_footer{
  text-align: center;
  font-size: 12px;
  color: #ccc;
  height: 30px;
  padding-top: 15px;
  background-color: #EFEFF4;
}